{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@db/*": ["./src/db/*"],
      "@common/*": ["./src/common/*"]
    }
  },
  "exclude": ["node_modules", "test/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
